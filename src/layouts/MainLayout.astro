---
import Sidebar from "~/components/Sidebar.astro";
import BaseLayout from "./BaseLayout.astro";
---

<BaseLayout>
  <section
    class="flex h-96 flex-col items-center justify-center space-y-4 bg-hero bg-top bg-no-repeat text-center"
  >
    <h1 class="flex items-end justify-center text-4xl md:text-6xl">
      Fuel <img
        src="/logos/sparky.svg"
        alt="sparky"
        class="mx-2 h-[50px] w-[50px] md:h-[72px] md:w-[72px]"
      /> your ambitions
    </h1>
    <p class="max-w-lg text-2xl text-neutral-400">
      Explore and join the world's fastest modular execution layer ecosystem
    </p>
  </section>
  <section class="flex md:space-x-4 2xl:space-x-10">
    <Sidebar />
    <slot />
  </section>
</BaseLayout>
